<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>JEE_Mehdi_Simon</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <!-- ENV ENTRIES -->
  <env-entry>
  	<env-entry-name>dummy</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>empty</env-entry-value> 
  </env-entry>
  <!-- CONTEXT PARAMS -->
  <context-param>
  	<param-name>apiUrl</param-name>
  	<param-value>http://localhost:8080/JEE_API/api</param-value>
  </context-param>
  <context-param>
  	<param-name>adminMail</param-name>
  	<param-value>iam.admin@gmail.com</param-value>
  </context-param>
  
  <!-- OTHER -->
	<session-config>
		<session-timeout>100</session-timeout>
	</session-config>
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/Errors.jsp</location>
	</error-page>

	
  <!-- ENVIRONNEMENT ENTRIES -->
  <env-entry> 
    <env-entry-name>apiUrl</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>http://localhost:8080/JEE_api/api</env-entry-value> 
 </env-entry>
  <!-- SERVLETS -->
  <servlet>
  	<servlet-name>Authentication</servlet-name>
  	<servlet-class>be.project.servlets.AuthenticationServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>HomeWorker</servlet-name>
  	<servlet-class>be.project.servlets.HomeWorkerServlet</servlet-class>
  </servlet>
   <servlet>
  	<servlet-name>Machine</servlet-name>
  	<servlet-class>be.project.servlets.MachineServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ManageMachine</servlet-name>
  	<servlet-class>be.project.servlets.ManageMachineServlet</servlet-class>
  </servlet>
   <servlet>
  	<servlet-name>CreateMaintenance</servlet-name>
  	<servlet-class>be.project.servlets.CreateMaintenanceServlet</servlet-class>
  </servlet>
   <servlet>
  	<servlet-name>ConsultMaintenance</servlet-name>
  	<servlet-class>be.project.servlets.ConsultMaintenanceServlet</servlet-class>
  </servlet>
   <servlet>
  	<servlet-name>UpdateMaintenance</servlet-name>
  	<servlet-class>be.project.servlets.UpdateMaintenanceServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Logout</servlet-name>
  	<servlet-class>be.project.servlets.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>GetMaintenanceInfos</servlet-name>
  	<servlet-class>be.project.servlets.GetMaintenanceInfosServlet</servlet-class>
  </servlet>
   <servlet>
  	<servlet-name>WriteReport</servlet-name>
  	<servlet-class>be.project.servlets.WriteReportServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>HomeEmployee</servlet-name>
  	<servlet-class>be.project.servlets.HomeEmployeeServlet</servlet-class>
  </servlet>
   <servlet>
  	<servlet-name>ShowSupplierMachines</servlet-name>
  	<servlet-class>be.project.servlets.ShowSupplierMachinesServlet</servlet-class>
  </servlet>
   <servlet>
  	<servlet-name>CreateOrder</servlet-name>
  	<servlet-class>be.project.servlets.CreateOrderServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>OrdersListing</servlet-name>
  	<servlet-class>be.project.servlets.OrdersListingServlet</servlet-class>
  </servlet>
  <!-- MAPPING SERVLET -->
  <servlet-mapping>
  	<servlet-name>Authentication</servlet-name>
	  	<url-pattern>/connexion</url-pattern>
	  	<url-pattern>/authentication</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
	 <servlet-name>Logout</servlet-name>
  		<url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>HomeWorker</servlet-name>
	  	<url-pattern>/homepage</url-pattern>
	  	<url-pattern>/home</url-pattern>
	  	<url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
	<servlet-name>Machine</servlet-name>
  		<url-pattern>/machines</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ManageMachine</servlet-name>
  		<url-pattern>/ManageMachine</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CreateMaintenance</servlet-name>
  		<url-pattern>/CreateMaintenance</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ConsultMaintenance</servlet-name>
  		<url-pattern>/ConsultMaintenance</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>UpdateMaintenance</servlet-name>
  		<url-pattern>/UpdateMaintenance</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
  	<servlet-name>GetMaintenanceInfos</servlet-name>
	  	<url-pattern>/maintenanceinfos</url-pattern>
	  	<url-pattern>/maintenancedetails</url-pattern>
	  	<url-pattern>/maintenance/details</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
  	<servlet-name>WriteReport</servlet-name>
	  	<url-pattern>/writereport</url-pattern>
	  	<url-pattern>/report</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>HomeEmployee</servlet-name>
	  	<url-pattern>/employee/home</url-pattern>
	  	<url-pattern>/maintenances</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  	<servlet-name>ShowSupplierMachines</servlet-name>
  		<url-pattern>/suppliersmachines</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>OrdersListing</servlet-name>
  	<url-pattern>/orders</url-pattern>
  </servlet-mapping>
  	<servlet-mapping>
	  <servlet-name>CreateOrder</servlet-name>
  		<url-pattern>/createorder</url-pattern>
  		<url-pattern>/validateorder</url-pattern>
  </servlet-mapping> 
	 
	  <!--FILTERS-->
  
   <filter>
		<filter-name>AuthenticationFilter</filter-name>
		<filter-class>be.project.filters.AuthenticationFilter</filter-class>
	</filter>
	<filter>
		<filter-name>WorkerAccessFilter</filter-name>
		<filter-class>be.project.filters.WorkerAccessFilter</filter-class>
	</filter>
		<filter>
		<filter-name>LeaderAccessFilter</filter-name>
		<filter-class>be.project.filters.LeaderAccessFilter</filter-class>
	</filter>
	<filter>
		<filter-name>EmployeeAccessFilter</filter-name>
		<filter-class>be.project.filters.EmployeeAccessFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
			<servlet-name>HomeWorker</servlet-name>
			<servlet-name>Machine</servlet-name>
			<servlet-name>ManageMachine</servlet-name>
			<servlet-name>CreateMaintenance</servlet-name>
			<servlet-name>ConsultMaintenance</servlet-name>
			<servlet-name>UpdateMaintenance</servlet-name>
			<servlet-name>GetMaintenanceInfos</servlet-name>
			<servlet-name>WriteReport</servlet-name>
			<servlet-name>HomeEmployee</servlet-name>
			<servlet-name>ShowSupplierMachines</servlet-name>
			<servlet-name>CreateOrder</servlet-name>
			<servlet-name>OrdersListing</servlet-name>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>WorkerAccessFilter</filter-name>
			<servlet-name>HomeWorker</servlet-name>
			<servlet-name>GetMaintenanceInfos</servlet-name>
			<servlet-name>WriteReport</servlet-name>
	</filter-mapping>

	<filter-mapping>
		<filter-name>LeaderAccessFilter</filter-name>
			<servlet-name>Machine</servlet-name>
			<servlet-name>ManageMachine</servlet-name>
			<servlet-name>CreateMaintenance</servlet-name>
			<servlet-name>ConsultMaintenance</servlet-name>
			<servlet-name>UpdateMaintenance</servlet-name>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>EmployeeAccessFilter</filter-name>
			<servlet-name>HomeEmployee</servlet-name>
			<servlet-name>ShowSupplierMachines</servlet-name>
			<servlet-name>CreateOrder</servlet-name>
			<servlet-name>OrdersListing</servlet-name>
	</filter-mapping>
</web-app>